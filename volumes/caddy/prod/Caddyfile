{
	dynamic_dns {
		provider cloudflare {$CLOUDFLARE_API_TOKEN}
		domains {
			{$BASE_DOMAIN} @ www lampa
		}
	}
}

(otp_auth) {
	forward_auth {args[0]} http://backend {
		uri /api/otp/verify
		copy_headers Cookie
		header_down Set-Cookie
		header_up Remote-Addr {host}
		header_up Original-URI {uri}
	}
}

{$BASE_DOMAIN} {
	@api path /api /api/* /_ /_/*
	@subdomain header Origin https://*.{$BASE_DOMAIN}

	handle @api {
		header @subdomain Access-Control-Allow-Origin {http.request.header.Origin}
		header @subdomain Access-Control-Allow-Credentials "true"
		header @subdomain Vary "Origin"

		reverse_proxy http://backend {
			header_down -Access-Control-Allow-Origin
		}
	}

	handle {
		reverse_proxy http://frontend
	}
}

lampa.{$BASE_DOMAIN} {
	@only_index {
		path /
		path /lampa-main/index.html
	}

	import otp_auth @only_index

	handle /lampa-main/plugins/modification.js {
		root * /lampa-plugins
		rewrite * /modification.js
		file_server
	}

	handle {
		reverse_proxy http://lampa
	}
}
